{
  "name": "lord-commander-poc",
  "version": "1.0.0",
  "description": "Professional CLI SDK Framework for building advanced command-line tools",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "lord-commander": "dist/cli.js",
    "lc": "dist/cli.js",
    "lord": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./plugins": {
      "import": "./dist/plugins/index.js",
      "types": "./dist/plugins/index.d.ts"
    }
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "node --loader ts-node/esm src/cli.ts",
    "lint": "ultracite fix .",
    "lint:check": "ultracite check .",
    "format": "ultracite fix .",
    "format:check": "ultracite check .",
    "test": "vitest --run",
    "test:fresh": "pnpm build && vitest --run",
    "test:ci": "pnpm build && vitest --run",
    "test:watch": "vitest watch",
    "test:coverage": "NODE_OPTIONS=\"--max-old-space-size=8192\" vitest run --coverage",
    "test:coverage:text": "vitest run --coverage --reporter=text",
    "test:ui": "vitest --ui",
    "test:cli-build": "vitest run src/tests/cli/build-validation.test.ts",
    "test:cli-integration": "vitest run src/tests/cli/integration.test.ts",
    "test:cli-performance": "vitest run src/tests/cli/performance.test.ts",
    "test:cli-all": "vitest run src/tests/cli/",
    "test:all": "vitest run src/tests/",
    "ci": "pnpm lint:check && pnpm build && pnpm test",
    "test-cli": "tsx src/tests/test-cli.ts",
    "test-updater": "tsx src/tests/test-updater.ts",
    "test-updater-comprehensive": "tsx src/tests/test-updater-comprehensive.ts",
    "example:basic-cli": "tsx src/examples/workflows/basic-cli-creation.ts",
    "example:advanced": "tsx src/examples/workflows/advanced-patterns.ts",
    "example:practical": "tsx src/examples/workflows/practical-workflows.ts",
    "example:icons": "tsx src/examples/enhanced-logger-icons-demo.ts",
    "example:readability": "tsx src/examples/cli-readability-demo.ts",
    "example:prompts": "tsx src/examples/enhanced-prompts-demo.ts",
    "setup": "node scripts/setup-dev.mjs",
    "release": "tsx scripts/release.ts",
    "analyze": "tsx scripts/generate-bundle-docs.ts",
    "docs:generate": "tsx scripts/generate-api-docs.ts",
    "docs:fix-links": "tsx scripts/fix-api-links.ts",
    "docs:update-metrics": "tsx scripts/update-readme-metrics.ts",
    "docs:bundle-analysis": "tsx scripts/generate-bundle-docs.ts",
    "docs:performance": "tsx scripts/generate-performance-docs.ts",
    "docs:update-all": "tsx scripts/update-all-docs.ts",
    "dev:setup": "node scripts/setup-dev.mjs",
    "bundle:analyze": "tsx scripts/generate-bundle-docs.ts"
  },
  "keywords": [
    "cli",
    "sdk",
    "framework",
    "command-line",
    "tool",
    "typescript",
    "commander",
    "scaffolding",
    "automation"
  ],
  "author": "fabiomarcellusdev",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/caedonai/lord-commander-poc.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@10.18.1",
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "commander": "^14.0.1",
    "execa": "^8.0.1",
    "figures": "^6.1.0",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@vitest/coverage-v8": "3.2.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "ultracite": "^6.1.0",
    "vitest": "^3.2.4"
  }
}
