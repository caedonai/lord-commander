{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "test:coverage": {
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "test:coverage:text": {
      "outputs": ["{projectRoot}/coverage"],
      "cache": true
    },
    "ci": {
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "lint": {
      "cache": true
    },
    "lint:check": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "format:check": {
      "cache": true
    },
    "test": {
      "cache": true
    },
    "test:fresh": {
      "cache": true
    },
    "test:ci": {
      "cache": true
    },
    "test:watch": {
      "cache": true
    },
    "test:all": {
      "cache": true
    },
    "bundle:analyze": {
      "cache": true
    }
  },
  "plugins": [
    "@nx/js",
    "@nx/vite", 
    "@nx/next",
    "@nx/esbuild"
  ],
  "namedInputs": {
    "default": ["{projectRoot}/**/*"],
    "production": [
      "!{projectRoot}/**/*.spec.ts",
      "!{projectRoot}/**/*.test.ts"
    ]
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "libs"
  },
  "generators": {
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "none"
      }
    }
  }
}
