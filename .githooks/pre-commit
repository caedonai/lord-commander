#!/bin/sh
# Pre-commit hook for Lord Commander SDK

echo "ğŸ” Running pre-commit checks..."

# Run linting on individual projects only (skip root project to avoid ultracite issues)
echo "ğŸ“ Running linting checks..."
CI=true pnpm nx run-many --target=lint --projects=api,ui,cli,cli-core,api-e2e,ui-e2e --parallel=3 || exit 1

echo "âœ… Pre-commit checks passed!"