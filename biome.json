{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "warn",
        "noNonNullAssertion": "warn",
        "useImportType": "off"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noControlCharactersInRegex": "off",
        "useIterableCallbackReturn": "warn",
        "noImplicitAnyLet": "warn",
        "noAssignInExpressions": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn"
      },
      "complexity": {
        "noBannedTypes": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    },
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "es5",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteStyle": "single",
      "attributePosition": "auto"
    }
  },
  "files": {
    "includes": [
      "libs/**/*.ts",
      "libs/**/*.tsx",
      "libs/**/*.js",
      "apps/*/src/**/*.ts",
      "apps/*/src/**/*.tsx",
      "apps/*/src/**/*.js",
      "apps/*/src/**/*.jsx",
      "apps/*/commands/**/*.ts",
      "apps/*/commands/**/*.js",
      "*.ts",
      "*.js"
    ],
    "ignoreUnknown": false
  }
}
